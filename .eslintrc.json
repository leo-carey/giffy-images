{
    "env": {
        "commonjs": true,
        "es2021": true
    },
    "plugins": [
        "mocha",
        "security"
    ],
    "extends": [
        "standard",
        "plugin:mocha/recommended",
        "plugin:security/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {},
    "overrides": [
        {
            "files": [
                "**/*.test.js"
            ],
            "rules": {
                "security/detect-non-literal-fs-filename": "off",
                "security/detect-object-injection": "off"
            }
        }
    ]
}